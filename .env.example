# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/quantum_trading
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# RabbitMQ (optional)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_HEARTBEAT=600

# Exchange API Keys (replace with your own)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true

# Risk Management
MAX_POSITION_VALUE=100000
MAX_DAILY_LOSS=10000
MAX_LEVERAGE=3.0
RISK_CHECK_INTERVAL=60

# Trading Configuration
DEFAULT_ORDER_TIMEOUT=30
ENABLE_PAPER_TRADING=true
EXECUTION_MODE=simulation

# Performance Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Dashboard
DASHBOARD_PORT=8080
DASHBOARD_HOST=0.0.0.0
ENABLE_DASHBOARD=true

# Backtesting
BACKTEST_DATA_PATH=/data/historical
BACKTEST_CHUNK_SIZE=10000
BACKTEST_PARALLEL_WORKERS=4

# Market Data
MARKET_DATA_BUFFER_SIZE=1000
MARKET_DATA_COMPRESSION=true
DATA_RETENTION_DAYS=365

# Notifications (optional)
ENABLE_NOTIFICATIONS=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Security
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Rate Limits
API_RATE_LIMIT_PER_MINUTE=60
EXCHANGE_RATE_LIMIT_PER_SECOND=10

# Feature Flags
ENABLE_ML_PREDICTIONS=false
ENABLE_SOCIAL_SENTIMENT=false
ENABLE_NEWS_INTEGRATION=false